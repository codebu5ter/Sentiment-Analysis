<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amanachintyanikhil.blogapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.amanachintyanikhil.blogapp.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.amanachintyanikhil.blogapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amanachintyanikhil.blogapp.PostActivity"
            android:parentActivityName="com.amanachintyanikhil.blogapp.MainActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.amanachintyanikhil.blogapp.RegisterActivity"
            android:parentActivityName="com.amanachintyanikhil.blogapp.FrontActivity" />
        <activity
            android:name="com.amanachintyanikhil.blogapp.LoginActivity"
            android:parentActivityName="com.amanachintyanikhil.blogapp.FrontActivity" />
        <activity
            android:name="com.amanachintyanikhil.blogapp.SetupActivity"
            android:parentActivityName="com.amanachintyanikhil.blogapp.RegisterActivity" />
        <activity android:name="com.amanachintyanikhil.blogapp.TweetActivity" />
        <activity android:name="com.amanachintyanikhil.blogapp.ResultActivity" />
        <activity
            android:name="com.amanachintyanikhil.blogapp.UserProfile"
            android:parentActivityName="com.amanachintyanikhil.blogapp.MainActivity" />
        <activity
            android:name="com.amanachintyanikhil.blogapp.BlogSingleActivity"
            android:parentActivityName="com.amanachintyanikhil.blogapp.MainActivity" />
        <activity
            android:name="com.amanachintyanikhil.blogapp.MyPosts"
            android:parentActivityName="com.amanachintyanikhil.blogapp.MainActivity" />
        <activity android:name="com.amanachintyanikhil.blogapp.FrontActivity" />
        <activity
            android:name=".CommentActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ProfileView"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Settings"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".AllFollowers"
                  android:parentActivityName=".MainActivity"
            ></activity>
    </application>

</manifest>