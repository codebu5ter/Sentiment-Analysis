<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.amanachintyanikhil.blogapp.ProfileView">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profiletb"
        ></android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/timeline"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fadedbackground" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/tb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"

        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:src="@drawable/person"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:scaleType="centerCrop"
        android:id="@+id/circleImageView" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:padding="1dp"
        android:layout_below="@+id/circleImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/pink"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:hint="person_name" />
    <TextView
        android:id="@+id/Profession"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:paddingBottom="4dp"
        android:layout_below="@+id/Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textStyle="normal"
        android:cursorVisible="false"
        android:textColor="@color/lightred"
        android:textSize="18sp"
        android:hint="profession" />

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_below="@id/Profession"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/view"
        android:textAlignment="center"
        android:background="@color/orange"></View>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:padding="1dp"
        android:id="@+id/tableLayout">

    <TableRow>
        <TextView
            android:text="Gender:"
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:textAlignment="textStart"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/slate"
            android:layout_weight="1"

            ></TextView>

        <TextView
            android:hint="gender"
            android:textSize="20sp"
            android:textAlignment="center"

            android:textColor="@color/slate"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/gender"
            ></TextView>

    </TableRow>

    <TableRow>
        <TextView
            android:text="D.O.B:"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textAlignment="textStart"

            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/slate"
            android:layout_weight="1"

            ></TextView>

        <TextView
            android:hint="d.o.b"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:textColor="@color/slate"
            android:layout_weight="1"

            android:id="@+id/dob"
            ></TextView>

    </TableRow>
    <TableRow
        android:paddingTop="6dp"
        >
        <TextView
            android:text="Phone:"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:paddingLeft="20dp"

            android:textStyle="bold"
            android:textColor="@color/slate"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            ></TextView>

        <TextView
            android:hint="phone"
            android:textSize="20sp"
            android:textAlignment="center"

            android:textColor="@color/slate"
            android:layout_weight="1"

            android:id="@+id/phone"
            ></TextView>
    </TableRow>


    <TableRow
        android:paddingTop="6dp">
        <TextView
            android:text="Email:"
            android:textSize="18dp"
            android:textAlignment="textStart"
            android:paddingLeft="20dp"

            android:textStyle="bold"
            android:textColor="@color/slate"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            ></TextView>

        <TextView
            android:hint="email"
            android:textSize="17sp"
            android:textAlignment="center"

            android:textColor="@color/slate"
            android:layout_weight="1"

            android:id="@+id/email"
            ></TextView>
    </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableLayout"
        android:textAllCaps="false"
        android:layout_marginTop="85dp"
        android:background="@color/lightred"
        android:textAlignment="center"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:text="Follow" />

</RelativeLayout>

</ScrollView>