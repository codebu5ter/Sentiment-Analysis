<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frontbackground"
    tools:context="com.amanachintyanikhil.blogapp.FrontActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:text="Blog App"
        android:textAlignment="center"
        android:textColor="@color/slate"
        android:textSize="37sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="“Don’t focus on having a great blog. Focus on producing a blog that’s great for your readers”"
        android:textAlignment="textStart"
        android:textColor="@color/slate"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView11"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="~ Brian Clark " />

    <Button
        android:id="@+id/login"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/textView12"
        android:layout_marginStart="25dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/frontlogin"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Already a user?" />

    <Button
        android:id="@+id/register"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/login"
        android:layout_below="@+id/login"
        android:layout_marginTop="10dp"
        android:background="@drawable/frontregister"
        android:text="Need a new Account?"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>
